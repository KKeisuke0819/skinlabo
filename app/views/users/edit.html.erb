
  <div class="row">
    <div class="col-lg-6">
    <h2>登録情報変更</h2>
    <%= form_for(@user, url:"/users/#{@user.id}") do |f| %>
    <table class="table table-hover table-inverse">
      <tr><th>氏名</th>
      <td><%= f.text_field :user_name %></td></tr>
      <tr><th>email</th>
      <td><%= f.text_field :email %></td></tr>
    </table>
    <p><%= f.submit '編集内容を保存する' %></p>
    <% end %>
    <p><%= link_to "退会する", bye_user_path(@user.id), class: "btn btn-secondary" %></p>
    </div>
  </div>