<div class="row">
	<h2>会員詳細</h2>
	   <div class = "col-lg-5">
	   		<table class="table table-inverse">
				<tr><th>会員ID</th><td><%= @user.id %>
				<% if @user.deleted_at.nil? %>
              	<%= "有効会員" %>
            	<% else %>
              	<%= "退会済み" %>
            	<% end %></td></tr>

				<tr><th>氏名</th>
				<td><%= @user.user_name %></td></tr>
				<tr><th>メールアドレス</th>
				<td><%= @user.email %></td></tr>
			</table>
			<%=link_to "編集する", edit_admin_user_path(@user.id) %>
		</div>
</div>