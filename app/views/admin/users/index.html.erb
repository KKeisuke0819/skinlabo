<div class='row'>
  <h2>会員一覧画面</h2>

    <div class="col-lg-12">
    	<table class="table table-hover table-inverse">
    		<thead>
      			<tr>
        			<th>会員ID</th>
        			<th>氏名</th>
        			<th>メールアドレス</th>
        			<th>ステータス</th>
    			</tr>
  			</thead>
    		<tbody>
    		<% @user.each do |user| %>
    			<tr>
     				<td><%= user.id %></td>
     				<td><%= link_to user.user_name, admin_user_path(user.id) %></td>
     				<td><%= user.email %></td>
     				<td><% if user.deleted_at.nil? %>
         					<%= "有効" %>
          				<% else %>
          					<%= "退会済み" %>
          				<% end %>
     		<% end %>
    			</tr>
    		</tbody>
    	</table>
    </div>
</div>
