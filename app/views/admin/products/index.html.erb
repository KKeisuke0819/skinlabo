<div class='row'>
  <p id="notice"></p>
  <h2 >商品一覧画面 <%= link_to "新規登録", new_admin_product_path, class: "btn btn-default" %></h2>

  	<div class="col-lg-12">
  	<table class="table table-hover table-inverse">
  		<thead>
  			<tr class="danger">
  				<th>商品ID</th>
        		<th>イメージ</th>
  				<th>商品名</th>
  				<th>価格</th>
  				<th>カテゴリー</th>
        		<th>削除</th>
 			</tr>
 	  	</thead>

  		<tbody>
  	 	<% @products.each do |product| %>
  	 	<tr class="active">
  	  		<td><%= product.id %></td>
      		<td><%= attachment_image_tag product, :image, :fill, 40, 40 %></td>
  	  		<td><%= link_to product.product_name,admin_product_path(product) %></td>
  	  		<td><%= product.price %></td>
      		<td><%= product.genre.variety %></td>
      		<td><%=link_to "Destroy", admin_product_path(product), method: :delete, class: "btn btn-dabger"%></td>
  	 	<% end %>
  	 	</tr>
  		</tbody>
	</table>
    </div>
</div>
