<div class="row">
  <h2>商品編集画面</h2>
		<%= form_for [:admin, @product] do |f| %>

  		<div class='col-xs-5'>
  		  <%= f.attachment_field :image %>
      </div>
      <div class='col-xs-5'>
  		  <p>商品名</p>
  		  <%= f.text_field :product_name %>

  		  <p>商品説明</p>
  		  <%= f.text_area :introduction %>

  		  <p>税抜き価格</p>
  		  <%= f.text_field :price %>
      </div>
        <div class='col-xs-2'>
		      <%= f.submit "変更を保存" %>
		    </div>
	   <% end %>
</div>
